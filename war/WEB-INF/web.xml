<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
  	</welcome-file-list>
	<servlet>
        <servlet-name>Mapa</servlet-name>
        <servlet-class>es.upm.dit.isst.socialTV.web.controllers.MapaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mapa</servlet-name>
        <url-pattern>/mapa</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>API</servlet-name>
        <servlet-class>es.upm.dit.isst.socialTV.web.controllers.APIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>API</servlet-name>
        <url-pattern>/api</url-pattern>
    </servlet-mapping>
	<servlet>
        <servlet-name>Cron</servlet-name>
        <servlet-class>es.upm.dit.isst.socialTV.web.controllers.CronServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cron</servlet-name>
        <url-pattern>/cron/consulta</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Mostrar</servlet-name>
        <servlet-class>es.upm.dit.isst.socialTV.web.controllers.ViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mostrar</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
</web-app>
